<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_image_horizontal"
        android:scaleType="center"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:src="@drawable/icon_login" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_horizontal_title"
                android:text="Skillet Cookie"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/small_margin_start"
                android:visibility="gone"
                android:textSize="@dimen/large_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_horizontal_price"
                android:layout_marginStart="@dimen/small_margin_start"
                android:text="14.00"
                android:visibility="gone"
                android:textStyle="bold"
                android:textSize="@dimen/large_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnHorizontalAdd"
                android:textStyle="bold"
                android:text="+"
                android:visibility="gone"
                android:padding="@dimen/small_padding"
                android:layout_margin="8dp"
                android:layout_marginEnd="@dimen/small_margin_end"
                android:background="@android:color/white"
                android:layout_width="80dp"
                android:layout_height="40dp"/>
            <Button
                android:id="@+id/btnHorizontalDelete"
                android:padding="@dimen/small_padding"
                android:textStyle="bold"
                android:visibility="gone"
                android:layout_margin="8dp"
                android:layout_marginBottom="1dp"
                android:background="@android:color/white"
                android:text="-"
                android:layout_width="80dp"
                android:layout_height="40dp"/>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>