<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivRestaurant"
        android:layout_width="100dp"
        android:layout_height="56dp"
        android:layout_marginTop="@dimen/large_margin_top"
        android:layout_marginBottom="@dimen/large_margin_bottom" />

    <LinearLayout
        android:layout_width="236dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNameRestaurant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/large_margin_top"
            android:layout_marginEnd="@dimen/tv_item_margin_end"
            android:maxLines="1"
            android:text="Gyro Bar"
            android:textSize="@dimen/rv_tv_name_size" />

        <TextView
            android:id="@+id/tvTypeFood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="24dp"
            android:text="Fries,Meet,Greet"
            android:textSize="@dimen/rv_tv_type_size" />

        <TextView
            android:id="@+id/tvRating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="16dp"
            android:text="Fries,Meet,Greet"
            android:textSize="10sp" />

    </LinearLayout>
</LinearLayout>