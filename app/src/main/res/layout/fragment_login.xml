<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.auth.login.LoginFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="#F2F4F9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/small_margin_bottom"
        android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/title_toolbar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/small_padding"
                android:layout_marginBottom="@dimen/small_margin_bottom"
                android:layout_marginStart="@dimen/small_margin_start"
                android:text= "@string/toolbar_login"
                android:textSize="@dimen/large_text_size"
                android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_login_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_login"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_margin_start"
        android:layout_marginTop="@dimen/small_margin_top"
        android:layout_marginEnd="@dimen/small_margin_end"
        android:layout_marginBottom="@dimen/small_margin_bottom"
        android:hint="@string/login_email_et_hint"
        android:padding="@dimen/large_padding">

        <com.google.android.material.textfield.TextInputEditText
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_margin_start"
        android:layout_marginTop="@dimen/small_margin_top"
        android:layout_marginEnd="@dimen/small_margin_end"
        android:layout_marginBottom="@dimen/small_margin_bottom"
        android:hint="@string/login_password_et_hint"
        android:padding="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_margin_start"
        android:layout_marginTop="@dimen/small_margin_top"
        android:layout_marginEnd="@dimen/small_margin_end"
        android:backgroundTint="@color/login_et_background"
        android:padding="@dimen/small_padding"
        android:text="@string/login_btn_text"
        android:textColor="@color/login_et_text_color" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/small_margin_start"
        android:layout_marginTop="@dimen/small_margin_top"
        android:layout_marginEnd="@dimen/small_margin_end"
        android:layout_marginBottom="@dimen/small_margin_top"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/small_margin_start"
            android:layout_marginTop="@dimen/small_margin_top"
            android:layout_marginEnd="@dimen/small_margin_end"
            android:padding="@dimen/small_padding"
            android:layout_marginBottom="@dimen/small_margin_bottom"
            android:text="@string/register"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/registerBtn"/>

        <TextView
            android:id="@+id/registerBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/small_margin_start"
            android:layout_marginTop="@dimen/small_margin_top"
            android:layout_marginEnd="@dimen/small_margin_end"
            android:padding="@dimen/small_padding"
            android:layout_marginBottom="@dimen/small_margin_bottom"
            android:text="@string/btnRegister"
            android:textColor="@color/login_et_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvAccount"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>