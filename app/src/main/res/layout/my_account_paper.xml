<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <TextView
        android:text="Manage Address"
        android:padding="@dimen/small_padding"
        android:layout_marginTop="@dimen/large_margin_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:drawableStartCompat="@drawable/icon_home"
        app:drawableRightCompat="@drawable/ic_arrow_right_24" />
    <TextView
        android:text="My Orders"
        android:padding="@dimen/small_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:drawableLeftCompat="@drawable/icon_home"
        app:drawableRightCompat="@drawable/ic_arrow_right_24" />
    <TextView
        android:text="My Wallet"
        android:padding="@dimen/small_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:drawableLeftCompat="@drawable/icon_home"
        app:drawableRightCompat="@drawable/ic_arrow_right_24" />

</LinearLayout>