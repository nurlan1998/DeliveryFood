<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.detail.DetailFragment">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/ivDetailMovie"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:paddingBottom="56dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius_bottom_left="40dp"
        app:riv_corner_radius_bottom_right="40dp" />

    <TextView
        android:id="@+id/tvDetailTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/large_margin_start"
        android:layout_marginTop="@dimen/small_margin_top"
        android:text="Pizza"
        android:textSize="@dimen/large_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivDetailMovie" />

    <TextView
        android:id="@+id/tvDetailPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/large_margin_start"
        android:layout_marginTop="@dimen/small_margin_top"
        android:text="456"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDetailTitle" />

    <Button
        android:id="@+id/btnMenuPlus"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:background="@android:color/white"
        android:text="+"
        android:textSize="@dimen/large_text_size"
        app:layout_constraintEnd_toStartOf="@id/btnMenuPlus"
        app:layout_constraintTop_toBottomOf="@id/ivDetailMovie" />

    <Button
        android:id="@+id/btnMenuMinus"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:textSize="@dimen/large_text_size"
        android:layout_marginStart="@dimen/large_margin_start"
        android:layout_marginEnd="@dimen/large_margin_end"
        android:background="@android:color/white"
        android:text="-"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnMenuPlus"
        app:layout_constraintTop_toBottomOf="@id/ivDetailMovie" />

</androidx.constraintlayout.widget.ConstraintLayout>